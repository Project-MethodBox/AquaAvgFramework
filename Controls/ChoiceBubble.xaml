<UserControl
    x:Class="AquaAvgFramework.Controls.ChoiceBubble"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:AquaAvgFramework.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Height="170"
    d:DesignHeight="170"
    d:DesignWidth="650"
    mc:Ignorable="d">
    <UserControl.Resources>
        <DataTemplate x:Key="ChoiceItemTemplate" DataType="{x:Type ListBoxItem}">
            <Border
                Background="Transparent"
                CornerRadius="5"
                MouseDown="Selected">
                <StackPanel Orientation="Horizontal">
                    <TextBlock
                        FontFamily="Consolas"
                        FontSize="20"
                        Foreground="White"
                        Text="&gt;" />
                    <TextBlock
                        Name="DetailsBlock"
                        Margin="5,0,0,0"
                        FontFamily="{Binding DetailFontFamily}"
                        FontSize="20"
                        Foreground="White"
                        Text="{Binding Text}" />
                </StackPanel>
            </Border>
        </DataTemplate>
    </UserControl.Resources>
    <Border Background="#CF333333" CornerRadius="30">
        <Grid Margin="0,10,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="1.1*" />
                <RowDefinition Height="3*" />
                <RowDefinition Height="0.62*" />
            </Grid.RowDefinitions>

            <StackPanel
                Grid.Row="0"
                Grid.ColumnSpan="2"
                Margin="0,-2,0,0"
                Orientation="Vertical">
                <TextBlock
                    Margin="20,0,20,5"
                    HorizontalAlignment="Center"
                    d:Text="做出选择"
                    FontFamily="{Binding CapitalFontFamily}"
                    FontSize="28"
                    Foreground="White"
                    Text="{Binding Capital}" />
                <Border
                    Height="2"
                    Margin="20,0,20,0"
                    Background="White"
                    CornerRadius="10" />
            </StackPanel>

            <StackPanel
                Name="ChoiceBorder"
                Grid.Row="1"
                Margin="20,5,18,5">
                <ListBox
                    Name="ChoiceBox"
                    Background="Transparent"
                    BorderThickness="0"
                    ItemTemplate="{Binding Source={StaticResource ChoiceItemTemplate}}"
                    ItemsSource="{Binding ObservableChoiceResults}" />
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
